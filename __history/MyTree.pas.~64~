unit MyTree;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Tree, Vcl.StdCtrls, Vcl.ExtCtrls, GameOver,
  Vcl.Menus;

type
  TForm1 = class(TForm)
    Image1: TImage;
    MainMenu1: TMainMenu;
    N1: TMenuItem;
    N2: TMenuItem;
    N3: TMenuItem;
    N4: TMenuItem;
    N5: TMenuItem;
    N6: TMenuItem;
    N7: TMenuItem;
    Timer1: TTimer;
    N8: TMenuItem;
    Timer2: TTimer;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    procedure FormDestroy(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure N3Click(Sender: TObject);
    procedure Timer1Timer(Sender: TObject);
    procedure Image1MouseDown(Sender: TObject; Button: TMouseButton;
      Shift: TShiftState; X, Y: Integer);
    procedure Timer2Timer(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;


var
  Form1: TForm1;
  tree:TTree;

  node:pNode;
  n:integer;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  I: Integer;
  j: Integer;
begin
     initialstate:=Tree.SearchState(nil,initialstate);
end;

procedure TForm1.FormDestroy(Sender: TObject);
begin
     Tree.destroy;
end;

procedure TForm1.Image1MouseDown(Sender: TObject; Button: TMouseButton;
  Shift: TShiftState; X, Y: Integer);
begin
     initialstate[x div 96, y div 96]:=1;
end;

procedure TForm1.N3Click(Sender: TObject);
begin
Close;
end;

procedure TForm1.Timer1Timer(Sender: TObject);
var
  j, i: Integer;
begin

for I := 0 to 2 do
  for j := 0 to 2 do
      if InitialState[i,j]=0 then
         image1.Canvas.Draw(i*96,j*96,nilGraphic)
                             else

      if InitialState[i,j]=1 then
         image1.Canvas.Draw(i*96,j*96,cross)
                             else

      if InitialState[i,j]=2 then
         image1.Canvas.Draw(i*96,j*96,toe);

         image1.Canvas.MoveTo(96,0);
         image1.Canvas.LineTo(96,288);

         image1.Canvas.MoveTo(192,0);
         image1.Canvas.LineTo(192,288);

         image1.Canvas.MoveTo(0,96);
         image1.Canvas.LineTo(288, 96);

         image1.Canvas.MoveTo(0, 192);
         image1.Canvas.LineTo(288, 192);

end;
procedure TForm1.Timer2Timer(Sender: TObject);
var
  I: Integer;
begin
if Label5.Caption<>'00' then
   begin

        label5.Caption:=inttostr(strtoint(Label5.Caption)-1);
   end
 else
  form2.show;



end;

end.
